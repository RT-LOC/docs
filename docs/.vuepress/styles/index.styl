.sidebar-link {
  font-size: 1.1em;
  font-weight: 700;
}

blockquote
  font-size: 1rem;
  margin-left: 10px;

a.sidebar-link.active {
  border-right: .25rem solid transparent;
  border-right-color: $accentColor;
  border-left: 0;
}

.sidebar
  background-color: #f4f5f7 !important;

.no-sidebar
  background: linear-gradient(0deg, #fff 40%, #e2e9ef 100%) !important;

.navbar {
  border-bottom: 3px solid;
  border-image-source: linear-gradient(270deg, #1c1c82 0%, #3e20ce 49%, #29b1d0 100%);
  border-image-slice: 1;
}

